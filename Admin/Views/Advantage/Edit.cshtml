@model AdvantageViewModel
@{
    ViewData["Title"] = "Üstünlükləri yenilə";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Slayderi yenilə</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <form method="post">
                <input asp-for="Id" type="hidden" />
                <div class="form-group">
                    <label>Vəziyyəti</label>
                    <div class="custom-control custom-radio custom-control-inline ml-3">
                        @Html.RadioButtonFor(model => model.Status,"True") Aktiv
                    </div>
                    <div class="custom-control custom-radio custom-control-inline">
                        @Html.RadioButtonFor(model => model.Status,"False")Passiv
                    </div>
                </div>
                <span class="text-danger">Statusu geyd etməyə unutma!</span>
                <div class="form-group">
                    <label asp-for="Icon">Ikon</label>
                    <input class="form-control form-control-user slug-source" asp-for="Icon">
                    <span class="field-validation-valid" asp-validation-for="Icon"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Title">Əsas mətn (Başlıq)</label>
                    <input class="form-control form-control-user slug-source" asp-for="Title">
                    <span class="field-validation-valid" asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Məlumat mətni</label>
                    <input class="form-control form-control-user slug-source" asp-for="Description">
                    <span class="field-validation-valid" asp-validation-for="Description"></span>
                </div>
                <div class="form-group d-flex justify-content-end mt-3">
                    <button type="submit" class="btn btn-primary btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-pencil-alt"></i>
                        </span>
                        <span class="text">Yenilə</span>
                    </button>
                </div>
            </form>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
@section Scripts{
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}